<UserControl x:Class="Task_Manager.MVVM.View.MyDayView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Task_Manager.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="800" 
             d:DesignWidth="1200">
    <Grid>
        <Border
            Background="#e0ca00"
            CornerRadius="10 0 0 0">
            <TextBlock
                Text="☼  My day"          
                FontSize="25"
                FontWeight="Bold"
                TextElement.Foreground="{DynamicResource MaterialDesignBackground}"
                Margin="40 20 0 0"
                >
            </TextBlock>
        </Border>

        <Grid
            Margin="50 70 50 50">

            <Grid
                Visibility="Visible">
                <Image
                   Height="120"
                   Width="120"
                   Source="/MVVM/View/MyDay.png"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Margin="0 0 0 210"
                        >
                </Image>

                <TextBlock
                   Text="My day - a list&#x0a;that is updated every day."
                   TextAlignment="Center"
                   FontSize="20"
                   TextElement.Foreground="{DynamicResource MaterialDesignBackground}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0 0 0 70"
                   >
                </TextBlock>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
